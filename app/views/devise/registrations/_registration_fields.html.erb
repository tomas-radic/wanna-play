<div class="form-group">
  <%= form_object.label :email, t('activerecord.attributes.user.email') %>
  <%= form_object.email_field :email, autofocus: true, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form_object.label :name, t('activerecord.attributes.user.name') %>
  <%= form_object.text_field :name, class: 'form-control' %>
  <small><i><%= t('.name_suggestion_note_html') %></i></small>
</div>

<div class="form-group">
  <%= form_object.label :phone_number, t('activerecord.attributes.user.phone_number') %>
  <%= form_object.text_field :phone_number, placeholder: '0901 234 567', class: 'form-control' %>
  <small><i><%= t('.phone_number_suggestion_note') %></i></small>
</div>
