<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h2 class="center-text"><%= t('.sign_up') %></h2>
          <%= render 'validation_errors' %>
          <%= render 'registration_fields', form_object: f %>

          <hr/>
          <div class="form-group">
            <%= f.label :password, t('.password') %>
            <% if @minimum_password_length %>
            <em><%= "(#{@minimum_password_length} #{t('.chars_count_min')})" %></em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, t('.password_confirmation') %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>

          <div class="actions">
            <%= f.submit t('.sign_up'), class: 'btn btn-default btn-lg center-element' %>
          </div>
        <% end %>
        <hr/>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>
